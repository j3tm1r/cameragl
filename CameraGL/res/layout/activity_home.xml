<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity" >

    <Spinner
        android:id="@+id/resolution_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="52dp" />

    <Button
        android:id="@+id/openGl"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/resolution_spinner"
        android:layout_below="@+id/resolution_spinner"
        android:layout_marginTop="24dp"
        android:background="@drawable/conversation_button_rectangle"
        android:text="OpenGL" />

    <Button
        android:id="@+id/ndk"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/openGl"
        android:layout_alignBottom="@+id/openGl"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/openGl"
        android:background="@drawable/conversation_button_rectangle"
        android:text="Ndk" />

</RelativeLayout>